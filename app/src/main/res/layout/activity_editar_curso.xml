<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtNomeCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Nome do Curso"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entre com o nome"
        android:layout_below="@+id/txtNomeCurso"
        android:id="@+id/edtNomeCurso" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNomeCurso"
        android:id="@+id/btnSalvarCurso"
        android:text="Salvar"
        android:onClick="salvar"/>
</RelativeLayout>

